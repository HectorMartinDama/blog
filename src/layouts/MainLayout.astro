---
import MainHead from './MainHead.astro';
import "../styles/global.css";
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import type { Heading } from '../scripts/types';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
    title: string;
    description: string;
    ogImage?: string;
    headings?: Heading[];
}

const { title, description, headings, ogImage }= Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<html lang={lang}>
    <MainHead {title} {ogImage} {description} />	
	<body>
        <Nav {headings}/>
        <div class="flex justify-center mt-[100px] md:mt-[50px] w-full">
            <main class="md:max-w-[736px] px-[20px] md:px-0 w-full">
                <slot></slot>
            </main>
        </div>
	</body>
    <div class="flex items-center justify-center">
        <Footer/>
    </div>
</html> 


<style>
    main{
        display: flex; flex-direction: column; min-height: 75vh;
    }
</style>



